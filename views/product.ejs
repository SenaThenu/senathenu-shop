<div class="product">
    <div class="product-preview">
        <div class="focus-img">
            <div class="all-imgs">
                <% locals.images.forEach((image, index) => { %>
                <img src="<%= `/product-images/${locals.uri}/${image}` %>" alt="<%= `Focus Image ${index + 1}` %>">
                <% }) %>
            </div>
            <div class="img-dots">
                <% for (let i=0; i < locals.images.length; i++) {%>
                <span class="dot"></span>
                <% } %>
            </div>
        </div>
        <div class="all-selector-imgs">
            <% locals.images.forEach((image, index) => { %>
            <img src="<%= `/product-images/${locals.uri}/${image}` %>" alt="<%= `Preview Image ${index + 1}` %>">
            <% }) %>
        </div>
    </div>
    <div class="product-details">
        <h1 class="name">
            <%= locals.display_name %>
        </h1>
        <h2 class="price">
            <%= `$${locals.price.toFixed(2)} USD` %>
        </h2>
        <p class="description">
            <%= locals.description %>
        </p>
        <a href="<%= locals.link %>" class="call-to-action" target="_blank">
            <% if (locals.price > 0) { %>
            Buy Now!
            <% } else { %>
            Claim for Free!
            <% } %>
        </a>
    </div>
</div>

<script src="/script.js" defer></script>